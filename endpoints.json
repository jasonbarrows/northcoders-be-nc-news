{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
          }
        ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article...",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article with the provided article id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article...",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url":
          "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments/decrements an article's votes count and serves the updated article",
    "queries": [],
    "requestBodyFormat": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "comment": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article...",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 1,
        "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for the provided article id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 2,
          "article_id": 1,
          "body": "Text from the comment...",
          "author": "butter_bridge",
          "votes": 14,
          "created_at": "2020-10-31T03:03:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "creates and then serves a new comment for the provided article id",
    "queries": [],
    "requestBodyFormat": {
      "username": "butter_bridge",
      "body": "This is a sample comment."
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "article_id": 1,
        "body": "This article is most excellently written, if I should say so myself.",
        "author": "butter_bridge",
        "votes": 0,
        "created_at": "2020-10-31T03:03:00.000Z"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment with the provided comment id",
    "queries": [],
    "exampleResponse": null
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "author": "weegembump",
          "name": "Gemma Bump",
